<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/AppTheme"
    tools:context=".SecondActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="left">
        <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/locicon"
        android:layout_margin="15dp"
        />
        <com.google.android.material.textfield.TextInputLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_gravity="center">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/location"
            android:textSize="30sp"
            android:fontFamily="@font/champagne_limousines"
            android:textColor="@color/colorPrimaryDark"
            >
        </TextView>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_gravity="center">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="15sp"
            android:fontFamily="@font/champagne_limousines"
            android:textColor="@color/colorPrimaryDark"
            android:id="@+id/locationTextView"
            android:layout_marginLeft="10dp">
        </TextView>
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioGroup
            android:id="@+id/mapTypeRBG"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <RadioButton
                android:id="@+id/normalMapRB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mapTypeRadioButton"
                android:fontFamily="@font/champagne_limousines"
                android:checked="true"/>
            <RadioButton
                android:id="@+id/urbanTypeMapRB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mapTypeRadioButton2"
                android:fontFamily="@font/champagne_limousines"/>
        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <fragment
            xmlns:map="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MapsActivity"
            map:cameraZoom="18"/>
    </LinearLayout>
</androidx.appcompat.widget.LinearLayoutCompat>